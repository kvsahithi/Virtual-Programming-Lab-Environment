{{outlet}}
{{#if addStudentFormLoaded}}
    <div class="w3-card-4 w3-margin">
        <div class="w3-container w3-green">
            <h4>Add Student</h4>
        </div>
        <form class="w3-container">
            <p>
                <label class="w3-text-green"><b>First Name</b></label>
                <input class="w3-input w3-border w3-sand" id="first_name" type="text">
            </p>
            <p>
                <label class="w3-text-green"><b>Last Name</b></label>
                <input class="w3-input w3-border w3-sand" id="last_name" type="text">
            </p>
            <p>
                <label class="w3-text-green"><b>Identification Number</b></label>
                <input class="w3-input w3-border w3-sand" id="id_no" type="text">
            </p>
            <div class="w3-center w3-margin">
                <button class="w3-btn w3-green" {{action "saveStudent"}}>Save</button>
                <button class="w3-btn w3-black" {{action "toggleStudentConfigForm"}}>Cancel</button>
            </div>
        </form>
    </div>
{{else}}
<div class="w3-container">
    <p><button class="w3-button w3-green w3-right w3-margin-bottom" {{action "toggleStudentConfigForm"}}>Add Student</button></p>
    <table class="w3-table-all w3-card-4">
        <tr class="w3-green">
            <th>Identification Number</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        {{#if students}}
            {{#each students as |student|}}
            <tr>
                <td>{{student.STUDENT_ID}}</td>
                <td>{{student.FIRST_NAME}}</td>
                <td>{{student.LAST_NAME}}</td>
            </tr>
            {{/each}}
        {{else}}
        <tr>
            <td colspan="3" class="w3-center">No data available</td>
        </tr>
        {{/if}}
    </table>
</div>
{{/if}}